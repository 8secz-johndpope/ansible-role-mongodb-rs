# {{ ansible_managed }}

storage:
  journal:
    enabled: true
  dbPath: {{ mongo_datadir }}
  engine: wiredTiger
systemLog:
  path: /var/log/mongodb/mongod.log
  logAppend: true
  destination: file
processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid
  timeZoneInfo: /usr/share/zoneinfo
net:
  port: {{ mongo_mongod_port }}
  bindIp: 0.0.0.0
security:
  keyFile: {{ mongo_datadir }}/secret
  authorization: disabled
replication:
  replSetName: {{ mongo_replica_set }}
